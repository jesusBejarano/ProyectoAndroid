<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nombre"
            android:layout_toRightOf="@+id/imagen"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/precio"
            android:layout_below="@+id/nombre"
            android:layout_alignLeft="@+id/nombre"
            android:paddingLeft="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="29dp"
            android:id="@+id/btnVerPedido"
            android:text="Ver"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/precio" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atdr."
            android:id="@+id/btnAtenderPedido"
            android:layout_toStartOf="@+id/btnVerPedido"
            android:layout_alignTop="@+id/btnVerPedido"
            android:layout_alignBottom="@+id/btnVerPedido"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>